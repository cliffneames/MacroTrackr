    <style>
        #map {
            margin: 0 auto;
            height: 400px;
            width: 400px;
        }

        #backButton{
            line-height: 1.5em;
            display: block;
            margin: 4em auto;
        }

        #Awesomeness {
            
        }

        html, body {
            
            padding: 0;
        }
    </style>
    </head>
</html>
<script>

var map, infoWindow, resultsNames = [];

// Initializes map location to Dallas
function initMap() {
  map = new google.maps.Map(document.getElementById('map'), {
    //center: {lat: 32.7767, lng: -96.7970},
    zoom: 15
  });
  infoWindow = new google.maps.InfoWindow;

  // Geolocation code
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(function(position) {
      var pos = {
        lat: position.coords.latitude,
        lng: position.coords.longitude
      };

      infoWindow.setPosition(pos);
      infoWindow.setContent('Location found.');
      infoWindow.open(map);

      // defines restaurant Marker search
      var service = new google.maps.places.PlacesService(map);
        service.nearbySearch({
          location: pos,
          radius: 5000,
          type: ['restaurant']
        }, callback);

        var List = document.querySelector('#Awesomeness')

        //Generates Restaurant list of names to be taken in by Nutritionix
        function callback(results, status) {
        if (status === google.maps.places.PlacesServiceStatus.OK) {
          for (var i = 0; i < results.length; i++) {
            createMarker(results[i]);
            resultsNames.push(results[i].name);
            let listItem = document.createElement('li')
            listItem.textContent = resultsNames[i];
            List.appendChild(listItem);

          }
         }

        var jsonData = JSON.stringify(resultsNames);

            $.ajax({
                url: '@Url.Action("ReturnResults", "UserPreferences")',
                type: 'POST',
                data: jsonData,
                dataType: 'json',
                contentType: "application/json; charset=utf-8"
            })
      }

      function createMarker(place) {
        var placeLoc = place.geometry.location;
        var marker = new google.maps.Marker({
          map: map,
          position: place.geometry.location
        });

        google.maps.event.addListener(marker, 'click', function() {
          infoWindow.setContent(place.name);
          infoWindow.open(map, this);
        });
      }

      map.setCenter(pos);
    }, function() {
      handleLocationError(true, infoWindow, map.getCenter());
    });
  } else {
    // browser doesn't support Geolocation
    handleLocationError(false, infoWindow, map.getCenter());
  }
}

function handleLocationError(browserHasGeolocation, infoWindow, pos) {
  infoWindow.setPosition(pos);
  infoWindow.setContent(browserHasGeolocation ?
                        'Error: The Geolocation service failed.' :
                        'Error: Your browser doesn\'t support geolocation.');
  infoWindow.open(map);
    }

    
    </script>
    <div id="map"></div>


    <script defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC-YVamwg4bMAZ8_Jf_Kqnlg2i1CO_n_Ao&callback=initMap&libraries=places">
    </script>

